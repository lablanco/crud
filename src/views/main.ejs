<%- include('partials/_header.ejs') %>

  <div class="container">
    <main>
      <div class="py-3 text-center">
        <h2>List Policies</h2>
        <p class="lead">Below is the list of policies.</p>
        <a href="/newpolicy" class="btn btn-lg btn-primary" type="button">New Policy</a>
        <a href="/" class="btn btn-lg btn-danger" type="button">Back</a>
      </div>
      <div class="table-responsive">
        <table id="table" data-toggle="table" data-height="460" data-pagination="true" data-search="true"
          class="table table-striped table-sm">
          <thead>
            <tr>
              <th data-field="system" data-sortable="true" data-sort-name="system" data-sort-order="desc" scope="col">
                System
              </th>
              <th data-field="policies" data-sortable="true" data-sort-name="policies" data-sort-order="desc"
                scope="col">Policies</th>
              <th data-field="policy" data-sortable="true" data-sort-name="policy" data-sort-order="desc" scope="col">
                Policy</th>
              <th data-field="control" data-sortable="true" data-sort-name="control" data-sort-order="desc" scope="col">
                Control</th>
              <th data-field="value" data-searchable="true" scope="col">Value</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0;i<text.length; i++) {%>
              <tr>
                <td>
                  <%= text[i].system%>
                </td>
                <td>
                  <%= text[i].policies%>
                </td>
                <td>
                  <%= text[i].policy%>
                </td>
                <td>
                  <%= text[i].requirement%>
                </td>
                <td>
                  <%= text[i].value%>
                </td>
                <td>
                  <a href="/update/<%=text[i]._id%>" class=" btn border-shadow">
                    <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
                  </a>
                  <a href="/delete/<%=text[i]._id%>" class="btn border-shadow">
                    <span class="text-gradient"><i class="fas fa-times"></i></span>
                  </a>
                </td>
              </tr>
              <%}%>
          </tbody>
        </table>
      </div>
    </main>

    <%- include('partials/_footer.ejs') %>